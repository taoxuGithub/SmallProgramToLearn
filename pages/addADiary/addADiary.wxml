<view>
  <view class="the-commit">
    <button class="the-commit-button" bindtap="ADiaryCommit">保   存</button>
    <button class="the-close-button" bindtap="ADiaryClose">关   闭</button>
  </view>
  <view class="the-title">
    <!--<view class="the-title-title">标题：</view>-->
    <view class="the-title-text-title">
        <input bindinput='TitleInput'
          class="the-title-input" 
          maxlength="25" 
          auto-focus placeholder="无标题"/>
    </view>
  </view>

  <view class="the-remember">
   <!-- <view class="the-remember-title">正文：</view>-->
    <view class="the-remember-text-textarea">
        <textarea bindinput ="RememberInput"
          class="the-remember-textarea"
          auto-focus="true"
          style="height: 35em"
          maxlength="1000"
          placeholder="无内容"/>
    </view>
  </view>
  <view class="the-ThisDateTime">
    <view class="the-ThisDateTime-text">{{ThisDateTime}}</view>
  </view>
</view>